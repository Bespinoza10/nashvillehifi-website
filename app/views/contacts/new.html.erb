<header class="contact-bg">
  <div class="bg-text">
    <h1>Contact Us</h1>
  </div>
</header>

<div id="contact-section" class="row">
  <div class="container">
    <div class="col s12">
      <%= form_for @contact do |f| %>
        <% if @contact.errors.any?%>
          <h2><%= pluralize(@contact.errors.count, "error") %> prevented this client from saving:</h2>
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <%end%>
          </ul>
        <%end%>
        <div class="row">
          <div class="input-field col s6">
            <%= f.text_field :name, {class: 'validate'}%>
            <label>Full Name</label>
          </div>
          <div class="input-field col s6">
            <%= f.text_field :email, {class: 'validate'} %>
            <label data-error="wrong" data-success="right">Email</label>
          </div>
        </div>


        <div class="row">
          <div class="col s12">
            <div class="input-field">
              <%= f.text_area :message, {class: 'materialize-textarea'}%>
              <label>Your Message</label>
            </div>

            <div class="col s12">
              <%= f.check_box :newsletter, id: "newsletter", class: "chcBox" %>
              <label id="newsletter" for="newsletter">I want to receive the SPAM FREE monthly newsletter HiFi Informe</label>
            </div>
          </div>
        </div>
        <br>
        <button class="btn waves-effect waves-light orange" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button>
      <%end%>
    </div>
  </div>
</div>

<script>
  $('.chcBox').on('change', function() {
    $('.chcBox').not(this).prop('checked', false);
  });
</script>