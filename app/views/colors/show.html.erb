<div id="product-specs" class="row">
  <div class="col s12 no-padding">
    <%= @color.name %>
  </div>
  <% if user_signed_in? %>
    <%= link_to "Edit", edit_color_path(@color), class: "btn orange" %>
    <%= link_to "Delete", color_path(@color), method: :delete, data: { confirm: "Are you sure you want to delete this color?"}, class: "btn red" %>
  <% end %>
</div>
